<!doctype html>
<html>
<head>
    <meta charset="utf-8" />
    <title>
        Lazy Loading 
    </title>
	<link rel="stylesheet" type="text/css" href="style.css">
</head>
<body>
 <div class="items-wrap" ng-app="InstagramLazyLoadApp" ng-controller="InstagramLazyController" scrolly="showMore()">
	<ul ng-show="isLayout('grid')" class="grid">
	<li ng-repeat="p in pics">
			<a href="{{p.link}}" target="_blank"><img ng-src="{{p.images.low_resolution.url}}" /></a>
		</li>
	</ul>

	<ul ng-show="isLayout('list')" class="list">
		<li ng-repeat="p in pics">
			<a href="{{p.link |  limitTo : 5}}" target="_blank"><img ng-src="{{p.images.thumbnail.url |  limitTo : 5}}" /></a>
			<p>{{p.caption.text}}</p>
		</li>
	</ul>
</div>
</body>
<script src="libs/angular.min.js"></script>
    <script src="controller.js"></script>

</html>